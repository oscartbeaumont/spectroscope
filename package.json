{
  "name": "spectroscope",
  "version": "1.0.0",
  "description": "Test Electron applications in style",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./main": {
      "require": "./dist/main.js",
      "import": "./dist/main.mjs"
    },
    "./preload": {
      "require": "./dist/preload.js",
      "import": "./dist/preload.mjs"
    }
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/index.d.ts"
      ],
      "./main": [
        "./dist/main.d.ts"
      ],
      "./preload": [
        "./dist/preload.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "author": {
    "name": "Oscar Beaumont",
    "email": "oscar@otbeaumont.me"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oscartbeaumont/spectroscope.git"
  },
  "bugs": {
    "url": "https://github.com/oscartbeaumont/spectroscope/issues"
  },
  "homepage": "https://github.com/oscartbeaumont/spectroscope#readme",
  "keywords": [
    "electron",
    "testing",
    "spectroscope",
    "testing-library",
    "electron-testing",
    "ui-testing"
  ],
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:module": "microbundle -i ./src/index.ts -o ./dist/index.js -f esm,cjs --target node --strict --generateTypes",
    "build:submodules": "microbundle -i ./src/*.ts -o ./dist -f esm,cjs --target node --strict --generateTypes",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "prettier --check . && eslint src/**/*.ts",
    "format": "prettier --write . && eslint src/**/*.ts --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "webdriverio": "^7.9.0"
  },
  "peerDependencies": {
    "electron": "13.x"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "electron": "^13.1.8",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.1",
    "microbundle": "^0.13.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2"
  }
}
